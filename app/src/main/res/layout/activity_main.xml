<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marvels"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/characterImg"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/marvel_logo"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/characterName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Marvel Comics"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/characterImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/characterDesc"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Marvel Comics is a comic book publishing house known for creating notable super heroes such as Spider-Man, Iron Man, Captain America, Daredevil, Hulk, Thor, the Avengers, the Guardians of the Galaxy, the X-Men, the Fantastic Four, and Deadpool. Marvel's most well-known villains include the Green Goblin, Doc Ock, Red Skull, Kingpin, Loki, Thanos, Ultron, Doctor Doom, and Magneto."
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp"
        android:padding="18dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/characterName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/switchBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Switch"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/characterDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/red"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>